<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dedede"
    android:orientation="vertical" >
    

    <RelativeLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="50dip" 
  			android:id="@+id/title" 
  			android:background="@drawable/top_bg"
  			android:gravity="center_vertical" 
  			
  			 >  
      		<TextView
      		    android:id="@+id/mimedetail_back"
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:drawableLeft="@drawable/back_seletor"
        		android:text="返回"
        		android:layout_centerVertical="true"
        		 android:textSize="20sp"	       		
        		android:layout_marginLeft="15dp"	
				android:textColor="@drawable/text_blue" /> 
				
      		<TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="发布任务"
                android:layout_centerInParent="true"
                android:gravity="center"
        		android:textSize="20sp"      		     		        		
				android:textColor="#ffffff" /> 
				
          	<TextView
          	     android:id="@+id/detail_save"
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="发布"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:layout_marginRight="10dip"
        		android:textSize="20sp"       		        			
				android:textColor="@drawable/text_blue" /> 	
      	
      		
      	</RelativeLayout>
      	
                    <View 
      		   
                     android:layout_width="match_parent" 
                     android:layout_height="1dip"  
                      android:background="@drawable/line"

                    />
    
    <ScrollView 
       	 android:layout_width="fill_parent"
         android:layout_height="wrap_content" 
         android:scrollbars="none"
        >
    
    <LinearLayout 
      			  	android:layout_width="fill_parent"
            	    android:layout_height="wrap_content"  
            	    android:background="@drawable/usermainpage_bg_center" 
      			    android:orientation="vertical"
      			    >

        
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="50dip"
            >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="任务标题"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="match_parent"
                android:gravity="center"
                android:singleLine="true"
                android:text="任务标题"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical" 
                 android:layout_weight="1"
                 android:gravity="center"
                >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|center"
                    android:src="@drawable/arrow_b" />

            </LinearLayout>
      
    </LinearLayout>
    
        <View
               android:layout_width="wrap_content"
               android:layout_height="1dip"
               android:layout_marginLeft="0dip"
               android:background="@drawable/line" />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/publishtask_activity_type_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="任务类型"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/publishtask_activity_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:singleLine="true"
                android:text="任务类型"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|center"
                    android:src="@drawable/arrow_b" />
            </LinearLayout>
    </LinearLayout>
        
        
    
    
        
</LinearLayout>
    </ScrollView>
    
      		
 
</LinearLayout>
