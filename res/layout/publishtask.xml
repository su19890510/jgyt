<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dedede"
    android:orientation="vertical" >
    

    <RelativeLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="50dip" 
  			android:id="@+id/title" 
  			android:background="@drawable/top_bg"
  			android:gravity="center_vertical" 
  			
  			 >  

      		<TextView
      		    android:id="@+id/publishtask_activity_back"
      		    android:layout_width="wrap_content"
      		    android:layout_height="wrap_content"
      		    android:layout_centerVertical="true"
      		    android:layout_marginLeft="15dp"
      		    android:drawableLeft="@drawable/back_seletor"
      		    android:text="返回"
      		    android:textColor="@drawable/text_blue"
      		    android:textSize="20sp" />
				
      		<TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="发布任务"
                android:layout_centerInParent="true"
                android:gravity="center"
        		android:textSize="20sp"      		     		        		
				android:textColor="#ffffff" /> 
				
          	<TextView
          	    android:id="@+id/publishtask_activity_apply"
          	    android:layout_width="wrap_content"
          	    android:layout_height="wrap_content"
          	    android:layout_alignParentRight="true"
          	    android:layout_centerVertical="true"
          	    android:layout_marginRight="10dip"
          	    android:text="发布"
          	    android:textColor="@drawable/text_blue"
          	    android:textSize="20sp" />
      		
      	</RelativeLayout>
      	
                    <View 
      		   
                     android:layout_width="match_parent" 
                     android:layout_height="1dip"  
                      android:background="@drawable/line"

                    />
    
    <ScrollView 
       	 android:layout_width="fill_parent"
         android:layout_height="wrap_content" 
         android:scrollbars="none"
        >
    
    <LinearLayout 
      			  	android:layout_width="fill_parent"
            	    android:layout_height="wrap_content"  
            	    android:background="@drawable/usermainpage_bg_center" 
      			    android:orientation="vertical"
      			    >

        <LinearLayout
            android:id="@+id/publish_task_title_layout"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:orientation="horizontal"
            android:clickable="true"
            			android:background="@drawable/myroom_item_pressed" > 

            <TextView
                android:id="@+id/taskdetail_title"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="任务标题"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/publish_task_title"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:singleLine="true"
                android:text="任务标题"
                android:textColor="#000000" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical" 
                 android:layout_weight="1"
                 android:gravity="center"
                >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|center"
                    android:src="@drawable/arrow_b" />

            </LinearLayout>
      
    </LinearLayout>
    
        <!-- begin -->
			        <View
			               android:layout_width="wrap_content"
			               android:layout_height="1dip"
			               android:layout_marginLeft="0dip"
			               android:background="@drawable/line" />

				    <LinearLayout
				        android:id="@+id/publishtask_activity_type_layout"
				        android:layout_width="match_parent"
				        android:layout_height="50dip"
				        android:orientation="horizontal"
				        android:clickable="true"
            			android:background="@drawable/myroom_item_pressed" > 
				
				            <TextView
				                android:id="@+id/publishtask_activity_type_title"
				                android:layout_width="0dp"
				                android:layout_height="match_parent"
				                android:layout_weight="2"
				                android:gravity="center"
				                android:text="任务类型"
				                android:textColor="#000000" />
				
				            <TextView
				                android:id="@+id/publishtask_activity_type"
				                android:layout_width="0dp"
				                android:layout_height="match_parent"
				                android:layout_weight="4"
				                android:gravity="center"
				                android:singleLine="true"
				                android:text="任务类型"
				                android:textColor="#000000" />
				
				            <LinearLayout
				                android:layout_width="0dp"
				                android:layout_height="match_parent"
				                android:layout_weight="1"
				                android:gravity="center"
				                android:orientation="vertical" >
				
				                <ImageView
				                    android:id="@+id/imageView11"
				                    android:layout_width="wrap_content"
				                    android:layout_height="wrap_content"
				                    android:gravity="center|center"
				                    android:src="@drawable/arrow_b" />
				            </LinearLayout>
				    </LinearLayout>
        <!-- end -->
        
      <!-- begin -->
			        <View
			               android:layout_width="wrap_content"
			               android:layout_height="1dip"
			               android:layout_marginLeft="0dip"
			               android:background="@drawable/line" />

				    <LinearLayout
				        android:id="@+id/publishtask_activity_reward_layou"
				        android:layout_width="match_parent"
				        android:layout_height="50dip"
				        android:orientation="horizontal"
				        android:clickable="true"
            			android:background="@drawable/myroom_item_pressed"  >
				
				            <TextView
				                android:id="@+id/publishtask_activity_reward_title"
				                android:layout_width="0dp"
				                android:layout_height="match_parent"
				                android:layout_weight="2"
				                android:gravity="center"
				                android:text="任务奖励"
				                android:textColor="#000000" />
				
				            <TextView
				                android:id="@+id/publishtask_activity_reward"
				                android:layout_width="0dp"
				                android:layout_height="match_parent"
				                android:layout_weight="4"
				                android:gravity="center"
				                android:singleLine="true"
				                android:text="18W"
				                android:textColor="#000000" />
				
				            <LinearLayout
				                android:layout_width="0dp"
				                android:layout_height="match_parent"
				                android:layout_weight="1"
				                android:gravity="center"
				                android:orientation="vertical" >
				
				                <ImageView
				                    android:id="@+id/imageView1111"
				                    android:layout_width="wrap_content"
				                    android:layout_height="wrap_content"
				                    android:gravity="center|center"
				                    android:src="@drawable/arrow_b" />
				            </LinearLayout>
				    </LinearLayout>
        <!-- end -->
       
        
        
    
    
     <!-- begin -->
			        <View
			               android:layout_width="wrap_content"
			               android:layout_height="1dip"
			               android:layout_marginLeft="0dip"
			               android:background="@drawable/line" />

				    <LinearLayout
				        android:id="@+id/publishtask_activity_start_time_layout"
				        android:layout_width="match_parent"
				        android:layout_height="50dip"
				        android:orientation="horizontal" 
                        android:clickable="true"
            			android:background="@drawable/myroom_item_pressed" >
				
				            <TextView
				                android:id="@+id/publishtask_activity_start_time_title"
				                android:layout_width="0dp"
				                android:layout_height="match_parent"
				                android:layout_weight="2"
				                android:gravity="center"
				                android:text="开始时间"
				                android:textColor="#000000" />
				
				            <TextView
				                android:id="@+id/publishtask_activity_start_time"
				                android:layout_width="0dp"
				                android:layout_height="match_parent"
				                android:layout_weight="4"
				                android:gravity="center"
				                android:singleLine="true"
				                android:text="2015-12-13"
				                android:textColor="#000000" />
				
				            <LinearLayout
				                android:layout_width="0dp"
				                android:layout_height="match_parent"
				                android:layout_weight="1"
				                android:gravity="center"
				                android:orientation="vertical" >
				
				                <ImageView
				                    android:id="@+id/imageView111"
				                    android:layout_width="wrap_content"
				                    android:layout_height="wrap_content"
				                    android:gravity="center|center"
				                    android:src="@drawable/arrow_b" />
				            </LinearLayout>
				    </LinearLayout>
        <!-- end -->
        
        
        
         <!-- begin -->
			        <View
			               android:layout_width="wrap_content"
			               android:layout_height="1dip"
			               android:layout_marginLeft="0dip"
			               android:background="@drawable/line" />

				    <LinearLayout
				        android:id="@+id/publishtask_activity_endtime_layout"
				        android:layout_width="match_parent"
				        android:layout_height="50dip"
				        android:orientation="horizontal" 
                        android:clickable="true"
            			android:background="@drawable/myroom_item_pressed" >
				
				            <TextView
				                android:id="@+id/publishtask_activity_endTime_title"
				                android:layout_width="0dp"
				                android:layout_height="match_parent"
				                android:layout_weight="2"
				                android:gravity="center"
				                android:text="结束时间"
				                android:textColor="#000000" />
				
				            <TextView
				                android:id="@+id/publishtask_activity_endTime"
				                android:layout_width="0dp"
				                android:layout_height="match_parent"
				                android:layout_weight="4"
				                android:gravity="center"
				                android:singleLine="true"
				                android:text="2015-12-30"
				                android:textColor="#000000" />
				
				            <LinearLayout
				                android:layout_width="0dp"
				                android:layout_height="match_parent"
				                android:layout_weight="1"
				                android:gravity="center"
				                android:orientation="vertical" >
				
				                <ImageView
				                    android:id="@+id/imageView11111"
				                    android:layout_width="wrap_content"
				                    android:layout_height="wrap_content"
				                    android:gravity="center|center"
				                    android:src="@drawable/arrow_b" />
				            </LinearLayout>
				    </LinearLayout>
        <!-- end -->
       
    
     <!-- begin -->
			        <View
			               android:layout_width="wrap_content"
			               android:layout_height="1dip"
			               android:layout_marginLeft="0dip"
			               android:background="@drawable/line" />

				    <LinearLayout
				        android:id="@+id/publishtask_activity_dec_layout"
				        android:layout_width="match_parent"
				        android:layout_height="150dip"
				        android:orientation="horizontal" 
                        android:clickable="true"
            			android:background="@drawable/myroom_item_pressed" >
				
				            <TextView
				                android:id="@+id/publishtask_activity_dec_title"
				                android:layout_width="0dp"
				                android:layout_height="match_parent"
				                android:layout_weight="2"
				                android:gravity="center"
				                android:text="任务描述"
				                android:textColor="#000000" />
				
				            <TextView
				                android:id="@+id/publishtask_activity_dec"
				                android:layout_width="0dp"
				                android:layout_height="match_parent"
				                android:layout_weight="4"
				                android:gravity="center"
				                android:singleLine="true"
				                android:text="2015-12-30"
				                android:textColor="#000000" />
				
				            <LinearLayout
				                android:layout_width="0dp"
				                android:layout_height="match_parent"
				                android:layout_weight="1"
				                android:gravity="center"
				                android:orientation="vertical" >
				
				                <ImageView
				                    android:id="@+id/imageView111111"
				                    android:layout_width="wrap_content"
				                    android:layout_height="wrap_content"
				                    android:gravity="center|center"
				                    android:src="@drawable/arrow_b" />
				            </LinearLayout>
				    </LinearLayout>
        <!-- end -->
       
        
</LinearLayout>
    </ScrollView>
    
      		
 
</LinearLayout>
