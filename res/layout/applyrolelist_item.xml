<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/myroom_item_pressed" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <TextView
            android:id="@+id/mypublishtaskdetail_list_item_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center|left"
            android:singleLine="true"
            android:text="申请人"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/mypublishtaskdetail_list_item_phone"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="0dp"
            android:layout_weight="2"
            android:gravity="center|right"
            android:text="联系方式"
            android:textColor="#f33a3a" />
    </LinearLayout>

    <TextView
        android:id="@+id/mypublishtaskdetail_list_item_pro_label"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:gravity="center"
        android:text="简介："
        android:textColor="#7b7a7a"
          android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"  />

    <TextView
        android:id="@+id/mypublishtaskdetail_list_item_pro"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="我有丰富的经验"
        android:gravity="center"
        android:textColor="#7b7a7a"
          android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"  />

</LinearLayout>
