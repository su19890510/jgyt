<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    android:orientation="vertical"
>

 <TextView android:id="@+id/choose_mer_tital" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        style="@style/top_text_style"
        android:text="@string/plant_tittle"/>

 <ScrollView
     android:id="@+id/scrollView1"
     android:layout_width="match_parent"
     android:layout_height="match_parent" >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical" >

         <ImageView
             android:id="@+id/imageView1"
             android:layout_width="100dp"
             android:layout_height="100dp"
             android:src="@drawable/bj" 
             android:layout_gravity="center"/>
         
         
       <RelativeLayout
	        android:id="@+id/myroom_detail"
	        android:layout_width="fill_parent"
	        android:layout_height="42dip"      
	        android:clickable="true"
	        android:layout_marginTop="15dip"      
	        android:background="@drawable/myroom_item_pressed"      
        >
        
       <TextView
	        android:id="@+id/myroom_detail1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_marginLeft="10dip"
	        android:layout_centerVertical="true"  
	        android:text="基本信息"
	        android:textSize="16sp"
	        android:textColor="#202020"      
        />
          <ImageView
                android:id="@+id/row_img_05"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"  
        		android:layout_marginRight="10dip"      	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:contentDescription="@string/app_name"      		
        		android:src="@drawable/mm_submenu" />
          </RelativeLayout>
          
       
       <RelativeLayout
	        android:id="@+id/myroom_update_password"
	        android:layout_width="fill_parent"
	        android:layout_height="42dip"      
	        android:clickable="true"
	        android:layout_marginTop="1dip"      
	        android:background="@drawable/myroom_item_pressed"      
        >
        
       <TextView
	        android:id="@+id/card_text1"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:layout_marginLeft="10dip"
	        android:layout_centerVertical="true"  
	        android:text="修改密码"
	        android:textSize="16sp"
	        android:textColor="#202020"      
        />
          <ImageView
                android:id="@+id/row_img_051"
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"  
        		android:layout_marginRight="10dip"      	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:contentDescription="@string/app_name"      		
        		android:src="@drawable/mm_submenu" />
          </RelativeLayout>
          
          
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:layout_marginTop="100dp" >

             <Button
                 android:id="@+id/myroom_button"
                 android:layout_width="match_parent"
                 android:layout_height="50dp"
                 android:layout_margin="20dp"
                 android:background="@drawable/myroom_button"
                 android:text="退出"
                 android:textColor="#ffffff"
                 android:textSize="20sp" />
         </LinearLayout>
     </LinearLayout>

 </ScrollView>
   
</LinearLayout>
