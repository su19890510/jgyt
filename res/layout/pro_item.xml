<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/myroom_item_pressed"
    android:layout_margin="1dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/pro_item_head"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="3"
            android:layout_margin="3dp"
            android:src="@drawable/bj" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="6" >

            <TextView
                android:id="@+id/pro_activity_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:textColor="#000000"
                android:text="TextView" />
            <TextView
                android:id="@+id/pro_activity_item_tittle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="2"
                android:textColor="#000000"
                android:text="TextView" />
            <TextView
                android:id="@+id/pro_activity_item_pro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="5"
                android:textColor="#000000"
                android:text="TextView" />

        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>
