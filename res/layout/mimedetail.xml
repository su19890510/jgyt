<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dedede"
    android:orientation="vertical" >
    

    <RelativeLayout 
  			android:layout_width="fill_parent"
  			android:layout_height="50dip" 
  			android:id="@+id/title" 
  			android:background="@drawable/top_bg"
  			android:gravity="center_vertical" 
  			
  			 >  
      		<TextView
      		    android:id="@+id/taskdetail_back"
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:drawableLeft="@drawable/back_seletor"
        		android:text="返回"
        		android:layout_centerVertical="true"
        		 android:textSize="20sp"	       		
        		android:layout_marginLeft="15dp"	
				android:textColor="@drawable/text_blue" /> 
				
      		<TextView
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="编辑个人资料"
                android:layout_centerInParent="true"
                android:gravity="center"
        		android:textSize="20sp"      		     		        		
				android:textColor="#ffffff" /> 
				
          	<TextView
          	     android:id="@+id/taskdetail_apply"
        		android:layout_width="wrap_content" 
        		android:layout_height="wrap_content" 
        		android:text="保存"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:layout_marginRight="10dip"
        		android:textSize="20sp"       		        			
				android:textColor="@drawable/text_blue" /> 	
      	
      		
      	</RelativeLayout>
      	
                    <View 
      		   
                     android:layout_width="match_parent" 
                     android:layout_height="1dip"  
                      android:background="@drawable/line"

                    />
    
    <ScrollView 
       	 android:layout_width="fill_parent"
         android:layout_height="wrap_content" 
         android:scrollbars="none"
        >
    
    <LinearLayout 
      			  	android:layout_width="fill_parent"
            	    android:layout_height="wrap_content"  
            	    android:background="@drawable/usermainpage_bg_center" 
      			    android:orientation="vertical"
      			    >	

      <LinearLayout 
            
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="15dip"      
        android:background="@null" 
        android:orientation="vertical"  
            >   
       
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="fill_parent"
        android:layout_height="80dip"      
        android:orientation="horizontal" 
        android:clickable="true"
        android:background="@null"
        >

         <TextView
        android:id="@+id/tou_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_marginLeft="10dip"
        android:layout_centerVertical="true"   
        android:text="头像"
        android:textSize="18sp"
        android:textColor="#404040"
       
        />
        
        
        <ImageView
            android:id="@+id/detail_img"
                    		android:contentDescription="@string/app_name"      		
            
            android:layout_width="60.0dip"
            android:layout_height="60.0dip"
            android:layout_centerVertical="true"
           android:layout_toLeftOf="@+id/row_img"
            android:background="@drawable/bj"
            android:scaleType="fitXY" />

  
        
               <ImageView
                android:id="@+id/row_img"
                        		android:contentDescription="@string/app_name"      		
                
            	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"  
        		android:layout_marginRight="10dip"      	     	
        		android:scaleType="matrix"
        		android:layout_centerVertical="true"
        		android:layout_alignParentRight="true"
        		android:src="@drawable/mm_submenu" />
              
       

          </RelativeLayout>
    
      		           <View
      		               android:layout_width="wrap_content"
      		               android:layout_height="1dip"
      		               android:layout_marginLeft="0dip"
      		               android:background="@drawable/line" />
      				
      			<RelativeLayout
      				    android:id="@+id/nickname_rl"
            			android:layout_width="fill_parent"
            			android:layout_height="45dip"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:background="@drawable/myroom_item_pressed" >
            			 
        				    
            			 <TextView
            			    android:id="@+id/mtv_011"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"        				       				
        					android:layout_centerVertical="true"
        					android:layout_marginLeft="10dip"
        					android:text="昵称/公司"
        					android:textSize="18sp"		
							android:textColor="#404040" />
            			
            			 <TextView
            			     android:id="@+id/nick_name"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:layout_toRightOf="@id/mtv_011"
        					android:layout_marginLeft="10dip"
        					android:layout_marginRight="10dip"
        					android:layout_centerVertical="true"
        					android:singleLine="true"
        					android:maxLength="15"
        					android:padding="8dp" 
        					android:text="比邻特"
        					android:textSize="18sp"		
							android:textColor="#202020" />

						<ImageView
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
        					android:layout_marginRight="10dip"         	     	
        					android:scaleType="matrix"
        					android:contentDescription="@string/app_name"      		
        					
        					android:layout_centerVertical="true"
        					android:layout_alignParentRight="true"
        					android:src="@drawable/mm_submenu" />      					
      				</RelativeLayout>
      				
      			  <View 
                     android:layout_width="fill_parent" 
                     android:layout_height="1dip"  
                      android:background="@drawable/line"
                      android:layout_marginLeft="0dip"
                    />		
      			
      				
      			<RelativeLayout
      				    android:id="@+id/detail_truename"
            			android:layout_width="fill_parent"
            			android:layout_height="45dip"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:background="@drawable/myroom_item_pressed" >
            			 
        				    
            			 <TextView
            			    android:id="@+id/detail_truename_label"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"        				       				
        					android:layout_centerVertical="true"
        					android:layout_marginLeft="10dip"
        					android:text="真实姓名"
        					android:textSize="18sp"		
							android:textColor="#404040" />
            			
            			 <TextView
            			     android:id="@+id/detail_truename_textview"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:layout_toRightOf="@id/detail_truename_label"
        					android:layout_marginLeft="10dip"
        					android:layout_marginRight="10dip"
        					android:layout_centerVertical="true"
        					android:singleLine="true"
        					android:maxLength="15"
        					android:padding="8dp" 
        					android:text="比邻特"
        					android:textSize="18sp"		
							android:textColor="#202020" />

						<ImageView
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
        					android:layout_marginRight="10dip"         	     	
        					android:scaleType="matrix"
        					android:contentDescription="@string/app_name"      		
        					
        					android:layout_centerVertical="true"
        					android:layout_alignParentRight="true"
        					android:src="@drawable/mm_submenu" />      					
      				</RelativeLayout>
      				
      			 <View 
                     android:layout_width="fill_parent" 
                     android:layout_height="1dip"  
                      android:background="@drawable/line"
                      android:layout_marginLeft="0dip"
                    />		
      			
      				
      			<RelativeLayout
      				    android:id="@+id/detail_phone_layout"
            			android:layout_width="fill_parent"
            			android:layout_height="45dip"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:background="@drawable/myroom_item_pressed" >
            			 
        				    
            			 <TextView
            			    android:id="@+id/detail_phone_label"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"        				       				
        					android:layout_centerVertical="true"
        					android:layout_marginLeft="10dip"
        					android:text="联系方式"
        					android:textSize="18sp"		
							android:textColor="#404040" />
            			
            			 <TextView
            			     android:id="@+id/detail_phone_textview"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:layout_toRightOf="@id/detail_phone_label"
        					android:layout_marginLeft="10dip"
        					android:layout_marginRight="10dip"
        					android:layout_centerVertical="true"
        					android:singleLine="true"
        					android:maxLength="35"
        					android:padding="8dp" 
        					android:text="比邻特"
        					android:textSize="18sp"		
							android:textColor="#202020" />

						<ImageView
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
        					android:layout_marginRight="10dip"         	     	
        					android:scaleType="matrix"
        					android:contentDescription="@string/app_name"      		
        					
        					android:layout_centerVertical="true"
        					android:layout_alignParentRight="true"
        					android:src="@drawable/mm_submenu" />      					
      				</RelativeLayout>
      			
      			
      			 <View 
                     android:layout_width="fill_parent" 
                     android:layout_height="1dip"  
                      android:background="@drawable/line"
                      android:layout_marginLeft="0dip"
                    />		
      			
      				
      			<RelativeLayout
      				    android:id="@+id/detail_pro_layout"
            			android:layout_width="fill_parent"
            			android:layout_height="100dp"
            			android:gravity="center_vertical"
            			android:clickable="true"
            			android:background="@drawable/myroom_item_pressed" >
            			 
        				    
            			 <TextView
            			    android:id="@+id/detail_pro_label"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"        				       				
        					android:layout_centerVertical="true"
        					android:layout_marginLeft="10dip"
        					android:text="简介"
        					android:textSize="18sp"		
							android:textColor="#404040" />
            			
            			 <TextView
            			     android:id="@+id/detail_pro_textview"
        					android:layout_width="wrap_content" 
        					android:layout_height="wrap_content"
        					android:layout_toRightOf="@id/detail_pro_label"
        					android:layout_marginLeft="10dip"
        					android:layout_marginRight="10dip"
        					android:layout_centerVertical="true"
        					android:singleLine="true"
        					android:maxLength="50"
        					android:padding="8dp" 
        					android:text="比邻特"
        					android:textSize="18sp"		
							android:textColor="#202020" />

						<ImageView
            				android:layout_width="wrap_content"
        					android:layout_height="wrap_content"
        					android:layout_marginRight="10dip"         	     	
        					android:scaleType="matrix"
        					android:contentDescription="@string/app_name"      		
        					
        					android:layout_centerVertical="true"
        					android:layout_alignParentRight="true"
        					android:src="@drawable/mm_submenu" />      					
      				</RelativeLayout>
      			
      			
      		</LinearLayout>
      		
      
      
      
      
      		</LinearLayout>
    </ScrollView>
    
      		
 
</LinearLayout>
